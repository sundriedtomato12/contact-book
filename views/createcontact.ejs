<%- include('partials/header'); -%>
<div class="container">
  <div class="row">
    <h1>Create New Contact</h1>
  </div>
  <div class="row">
    <form id="createcontact-form" action="/contacts/add" method="POST">
      <div class="mb-3">
        <label for="firstname" class="form-label">First Name</label><br />
        <input
          class="form-control"
          type="text"
          id="firstname"
          name="firstname"
          required
        />
      </div>
      <div class="mb-3">
        <label for="lastname" class="form-label">Last Name</label><br />
        <input
          class="form-control"
          type="text"
          id="lastname"
          name="lastname"
          required
        />
      </div>
      <div class="mb-3">
        <label for="phonenumber" class="form-label">Phone Number</label><br />
        <input
          class="form-control"
          type="text"
          id="phonenumber"
          name="phonenumber"
          required
        />
      </div>
      <input
        class="btn btn-primary"
        type="submit"
        id="submit"
        value="Create Contact"
      />
    </form>
  </div>
  <div class="row text-center">
    <a href="/">Back to Main Page</a>
  </div>
</div>
<%- include('partials/footer'); -%>
