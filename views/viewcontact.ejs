<%- include('header'); -%>
<div class="createentry-body">
  <div class="para-1">
    <h1>Viewing Contact</h1>
    <h2>Name: <%= contact.firstname %> <%= contact.lastname %></h2>
    <h2>Phone Number: <%= contact.phonenumber %></h2>
  </div>
  <div class="options">
    <a href="/contacts/<%= contact._id %>/edit">Edit Contact Entry</a>
    <form
      action="/contacts/<%= contact._id %>?_method=DELETE"
      method="POST"
      onsubmit="return confirm('Are you sure you want to delete this entry?');"
    >
      <input type="submit" value="Delete Contact Entry" />
    </form>
  </div>
  <div class="mainpage-link">
    <a href="/">Back to Main Page</a>
    <a href="/contacts?page=1&limit=10">Back to View Contacts</a>
  </div>
</div>
<%- include('footer'); -%>
