<%- include('partials/header'); -%>
<div class="container">
  <div class="row">
    <h1>Viewing Contact</h1>
    <h2>Name: <%= contact.firstname %> <%= contact.lastname %></h2>
    <h2>Phone Number: <%= contact.phonenumber %></h2>
  </div>
  <div class="row">
    <a class="col" href="/contacts/<%= contact._id %>/edit"
      >Edit Contact Entry</a
    >
    <form
      class="col"
      action="/contacts/<%= contact._id %>?_method=DELETE"
      method="POST"
      onsubmit="return confirm('Are you sure you want to delete this entry?');"
    >
      <input type="submit" value="Delete Contact Entry" />
    </form>
  </div>
  <div class="row">
    <a class="col" href="/">Back to Main Page</a>
    <a class="col" href="/contacts?page=1&limit=10">Back to View Contacts</a>
  </div>
</div>
<%- include('partials/footer'); -%>
